<% provide(:title, 'Sign me up!') %>

<%= devise_error_messages! %>


<div class="row">
	<div class="col-md-4 col-md-offset-3 thumbnail" style="padding: 30px; margin-top: 40px;">


		<div>
			<%= link_to image_tag("facebook.png"), omniauth_authorize_path(resource_name, :facebook) %>
		</div>

		<div style="text-align: center; margin-top: 13px;">or</div>

		<%= form_for(resource, role: "form", :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  

		  <div class="form-group">
		  <div><%#= f.label :email %><br />
		  <%= f.email_field :email, class: "form-control", :autofocus => true, placeholder: " Email" %></div>

		  <div><%#= f.label :password %><br />
		  <%= f.password_field :password, placeholder: "Password", class: "form-control" %></div>

		  <div><%#= f.label :password_confirmation %><br />
		  <%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "form-control" %></div>
		  </div>

		  <div><%= f.submit "Sign up", class: "btn btn-default btn-block" %></div><br>
		<% end %>

		<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />

		<%#= render "users/shared/links" %>
	</div>
</div>