<%= devise_error_messages! %>
<div class="row">
<div class="col-md-4 col-md-offset-3 thumbnail" style="padding: 30px; margin-top: 40px;">

		<p><strong>Resend email confirmation instructions</strong></p>


<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  

  <div class="form-group"><%#= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Enter Email" %></div>

  <div><%= f.submit "Resend confirmation instructions", class: "btn btn-default btn-block" %></div>
<% end %>

<%= render "users/shared/links" %>

</div></div>
