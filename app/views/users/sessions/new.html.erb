<% provide(:title, 'Sign In') %>

<div class="row">
<div class="col-md-4 col-md-offset-3 thumbnail" style="padding: 30px; margin-top: 40px;">
		
		<div>
			<%= link_to image_tag("facebook.png"), omniauth_authorize_path(resource_name, :facebook) %>
		</div>

		 <div style="text-align: center; margin-top: 13px;">or</div>

		<%= form_for(resource, role: "form", :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="form-group">
		  <div><%#= f.label :email %><br />
		  <%= f.email_field :email, placeholder: "Enter email", class: "form-control", :autofocus => true %></div>
		  

		  
			  <div><%#= f.label :password %><br />
			  <%= f.password_field :password, placeholder: "Enter password", class: "form-control" %></div>
		  </div>

		  <%# if devise_mapping.rememberable? -%>
		    <%#<div class="checkbox"><%#= f.check_box :remember_me %> <%#= f.label :remember_me %><%#</div>%>
		  <%# end -%>

		  <div><%= f.submit "Sign in", class: "btn btn-default btn-block" %></div>
		<% end %>

		<%= render "users/shared/links" %>
</div>

</div>