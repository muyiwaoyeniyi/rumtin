<% provide(:title, 'Change Password') %>

<%= devise_error_messages! %>

<div class="row">
<div class="col-md-4 col-md-offset-3 thumbnail" style="padding: 30px; margin-top: 40px;">

		<p><strong>Forgot your password?</strong></p>

		<%= form_for(resource, role: "form", :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  

		  <div class="form-group"><%#= f.label :email %><br />
		  <%= f.email_field :email, placeholder: "Enter Email", :autofocus => true, class: "form-control" %></div>

		  <div><%= f.submit "Reset password", class: "btn btn-default btn-block" %></div>
		<% end %>

		<%#= render "users/shared/links" %>
	</div>
</div>
