<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Rumtin', root_path, class: 'navbar-brand', style: "color: #e06d5e; font-size: 15px" %>
    </div>

    <div class="collapse navbar-collapse">
      <%= form_tag books_path, method: :get, :class =>"navbar-form navbar-left", :role => "search" do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], :class => "form-control", :placeholder => "Search" %>
          <span class="input-group-btn">
            <%= button_tag(type: 'submit', class: "btn btn-default", name: nil) do %>
              <i class="glyphicon glyphicon-search"></i>
            <% end %>
          </span>
        </div>
      <% end %>

      <%= link_to 'Add Books', new_book_path, class: 'add_book_button', style: "color: white;" %>

      <ul class="nav navbar-nav navbar-right">
        <%= render 'layouts/navigation_links' %>
      </ul>
    </div>
  </div>
</nav>
